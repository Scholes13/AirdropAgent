# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Document formats
*.md text diff=markdown
*.json text

# Binary files
*.db binary
*.p binary
*.pkl binary
*.pyc binary
*.pyd binary
*.pyo binary

# Exclude these files from the git archive
.gitattributes export-ignore
.gitignore export-ignore 